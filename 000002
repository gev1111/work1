function range(a, b, d){
  if(!d) d = 1;
  var range = [];
  if(a<b){
    for (var i = a; i<=b; i+=d)
      range.push(i);
  }else{
    for (var i = a; i>=b; i+=d)
      range.push(i);
  }
  return range;
};


 function sum(range){
  var sum = 0;
  for (var i = 0; i<=range.length; i++)
    sum +=i;
  return sum;
  
};
console.log(sum(range(1, 10)));

console.log(range(5, 2, -1));
